{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "paths": {
      "@repo/lib/*": ["../packages/lib/src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["_generated"]
}
